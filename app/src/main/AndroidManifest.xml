<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nibble.musspeed">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MuSSpeed">
        <activity
            android:name=".PathRunActivityBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity android:name=".WorkoutSelectionActivityBar" />
        <activity android:name=".PathSelectionActivityBar" />
        <activity android:name=".MusicSelectionActivityBar"/>
        <activity
            android:name=".BodySelectionActivityBar"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title"
            android:theme="@style/Theme.MuSSpeed.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <service android:name="com.nibble.musspeed.MusicService" />-->
    </application>

</manifest>